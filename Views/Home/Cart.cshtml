@{
    ViewData["Title"] = "Cart";
}
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>List Cart</p>
                    <h1>Cart</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="cart-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="cart-table-wrap">
                    <table class="cart-table">
                        <thead class="cart-table-head">
                            <tr class="table-head-row">
                                <th class="product-remove">Action</th>
                                <th class="product-image">Product Image</th>
                                <th class="product-name">Name</th>
                                <th class="product-price">Price</th>
                                <th class="product-quantity">Quantity</th>
                                <th class="product-total">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.carts != null)
                            {
                                var totalCost = 0;

                                @foreach (var item in ViewBag.carts)
                                {
                                    <tr class="table-body-row">
                                        <td class="product-remove">
                                            <a asp-action="RemoveCart" asp-route-id="@item.Product.Id" class="shop-tooltip close float-none text-danger" title=""><i class="far fa-window-close"></i></a>
                                        </td>
                                        <td class="product-image"><img src="~/images/@item.Product.ProfilePicture" alt=""></td>
                                        <td class="product-name">@item.Product.Title</td>
                                        <td class="product-price">$@item.Product.Price</td>
                                        <form asp-action="UpdateCart" method="post" class="add-to-cart mt-3">
                                            <input type="hidden" name="Id" value="@item.Product.Id" />
                                        <td class="product-quantity d-flex flex-wrap align-items-center flex-column">
                                            <input type="number" name="Quantity" class="form-control text-center mb-2" value="@item.Quantity" />
                                            <button type="submit" class="btn btn-primary">Update Quantity</button>
                                        </td>
                                        </form>
                                        <td class="product-total">$@(item.Quantity * item.Product.Price)</td>
                                    </tr>

                                    totalCost += item.Quantity * item.Product.Price;
                                }

                                <tr>
                                    <td colspan="6" class="text-end"><strong>Total: $@totalCost</strong></td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6">Cart is empty</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="col-12 d-flex justify-content-end mt-3">
                        <a class="btn btn-lg btn-primary mt-2" asp-area="" asp-controller="Home" asp-action="StoreOrder">Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="logo-carousel-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="logo-carousel-inner">
                    <div class="single-logo-item">
                        <img src="assets/img/company-logos/1.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="assets/img/company-logos/2.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="assets/img/company-logos/3.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="assets/img/company-logos/4.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="assets/img/company-logos/5.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





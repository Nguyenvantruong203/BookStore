@{
    ViewData["Title"] = "ShowOrder";
}

<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Check Out Product</p>
                    <h1>Payment Successful</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="table-responsive py-5">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">Order ID</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Product Image</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Total Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in ViewBag.OrdersWithProducts)
                {
                    <tr>
                        <td>@order.Order.Id</td>
                        <td>@order.Product.Title</td>
                        <td>
                            <img style="max-width: 100px; max-height: 100px;" src="~/images/@order.Product.ProfilePicture" alt="Product Image" />
                        </td>
                        <td>@order.Order.Submitted.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>
                            <span class="badge badge-primary">Pending</span>
                        </td>
                        <td>$ @order.Order.TotalPrice</td>
                    </tr>
                }

                <tr>
                    <td colspan="6" class="text-center"><strong>Total: $ @ViewBag.TotalOrderPrice</strong></td>
                </tr>
            </tbody>
        </table>

        <div class="float-right mt-3 mr-3">
            <a class="btn btn-lg btn-primary md-btn-flat" asp-area="" asp-controller="Home" asp-action="Index">Back to Shopping</a>
        </div>
    </div>
</div>
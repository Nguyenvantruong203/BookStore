@model IEnumerable<ASP_GCH1107_NguyenVanTruong.Models.Category>

@{
    ViewData["Title"] = "Category Index";
    Layout = "_LayoutAdmin";
}

<div class="container mt-4">
    <h1>Category List</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => category.Name)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
